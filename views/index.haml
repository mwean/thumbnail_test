!!! 5
%html
  %head
    %title Video Analytics
    %link(rel="stylesheet" type="text/css" href="/style.css")
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
    %script{src: "/app.js", type: "text/javascript"}


  %body
    #container
      #header
        %h1 Choose a Video!
      %a{href: "/choose/#{@first}", id: @first}
        %img.left{src: "/img/#{@first}.jpg"}
      %a{href: "/choose/#{@second}", id: @second}
        %img.middle{src: "/img/#{@second}.jpg"}
      %a{href: "/choose/#{@third}", id: @third}
        %img.right{src: "/img/#{@third}.jpg"}